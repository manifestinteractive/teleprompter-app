{
  "name": "TelePrompter",
  "version": "1.0.0",
  "description": "Native App Wrapper for Browser-based TelePrompter",
  "homepage": "https://github.com/manifestinteractive/teleprompter-app",
  "license": "MIT",
  "main": "./src/main.js",
  "keywords": [
    "Teleprompter",
    "MacOS",
    "Windows",
    "Linux"
  ],
  "contributors": [
    {
      "name": "Peter Schmalfeldt",
      "email": "me@peterschmalfeldt.com",
      "url": "https://peterschmalfeldt.com"
    }
  ],
  "engines": {
    "node": ">= 14.15.3",
    "npm": ">= 6.14.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manifestinteractive/teleprompter-app.git"
  },
  "bugs": {
    "url": "https://github.com/manifestinteractive/teleprompter-app/issues"
  },
  "scripts": {
    "start": "electron-forge start",
    "start:debug": "electron-forge start --inspect-electron",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .js -f ./node_modules/eslint-friendly-formatter src --fix && echo '\n【ツ】CODE FORMATTING PERFECTION !!!\n'"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-dmg": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "@electron-forge/publisher-github": "^6.0.0-beta.57",
    "babel-eslint": "^10.1.0",
    "dotenv": "^10.0.0",
    "electron": "^13.1.4",
    "eslint": "^7.29.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "pre-commit": "^1.2.2"
  },
  "dependencies": {
    "electron-settings": "^4.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "glasstron": "0.0.7",
    "windowbar": "^1.7.4"
  },
  "config": {
    "forge": "./forge-config.js"
  },
  "pre-commit": [
    "lint"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "jquery": true
    },
    "globals": {
      "browser": true,
      "QRCode": true,
      "gtag": true,
      "io": true
    },
    "extends": "standard",
    "plugins": [
      "html"
    ],
    "rules": {
      "quotes": [
        2,
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "arrow-parens": 0,
      "no-unused-vars": 0,
      "generator-star-spacing": 0,
      "prefer-promise-reject-errors": 0,
      "node/no-callback-literal": 0,
      "node/no-path-concat": 0
    }
  },
  "eslintIgnore": [
    "src/assets/js/plugins.js"
  ]
}
